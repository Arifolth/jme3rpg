<?xml version="1.0" encoding="UTF-8"?>
<nifty>
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />

    <controlDefinition name = "loadingbar" controller = "ru.arifolth.anjrpg.ANJRpg">
        <image filename="Interface/border.png" childLayout="absolute"
               imageMode="resize:15,2,15,15,15,2,15,2,15,2,15,15">
            <image id="progressbar" x="0" y="0" filename="Interface/inner.png" width="32px" height="100%"
                   imageMode="resize:15,2,15,15,15,2,15,2,15,2,15,15" />
        </image>
    </controlDefinition>

    <screen id="loadlevel" controller = "ru.arifolth.anjrpg.ANJRpg">
        <layer id="loadinglayer" childLayout="center" backgroundImage="Interface/loading_screen.jpg">
            <panel id = "loadingpanel" childLayout="vertical" align="center" valign="center" height="100%" width="70%">
                <image filename="Interface/title.png" align="center" width="100%" height="65%"/>
                <control name="loadingbar" align="center" valign="center" width="100%" height="3%" />
                <control id="loadingtext" name="label" align="center"
                         text="                                                  "/>
                <image filename="Interface/loading.png" align="center" width="100%" height="10%"/>
                <panel id = "footer" childLayout="horizontal" align="center" height="10%" width="50%">
                    <image filename="Interface/jMonkey.jpg" align="center" width="300px" height="300px"/>
                    <image filename="Interface/copyright.png" align="center" width="70%" height="40%"/>
                    <image filename="Interface/java.jpg" align="center" width="161px" height="300px"/>
                </panel>
            </panel>
        </layer>
    </screen>

    <screen id="end" controller = "ru.arifolth.anjrpg.ANJRpg" />

</nifty>